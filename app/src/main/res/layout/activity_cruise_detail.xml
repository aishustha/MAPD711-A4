    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CruiseDetail">


    <!-- Message-->
    <TextView
        android:id="@+id/textViewmess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="40dp"
        android:text="Cruise Details"
        android:textStyle="bold"
        android:textAlignment="center"
        android:visibility="visible"
        tools:visibility="visible" />


    <!--For cruise type field-->
    <TextView
        android:id="@+id/textViewcruise1"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="420dp"
        android:text="Cruise Type:"
        android:visibility="visible"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="52dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/cruise"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="420dp"
        android:layout_toEndOf="@+id/textViewcruise1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="43dp" />

    <!--For Places field-->
    <TextView
        android:id="@+id/textViewplaces1"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textViewcruise1"
        android:text="Visiting Places:"
        android:visibility="visible"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="52dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/places"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/textViewplaces1"
        android:layout_below="@+id/cruise"
        android:text=""
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="43dp" />

