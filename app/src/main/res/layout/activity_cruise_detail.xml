    <!--For Duration field-->
    <TextView
        android:id="@+id/textViewduration1"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:layout_below="@+id/textViewplaces1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Duration:"
        android:visibility="visible"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="52dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/textViewduration1"
        android:layout_below="@+id/places"
        android:ems="10"
        android:text=""
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="43dp" />

    <!--For price field-->
    <TextView
        android:id="@+id/textViewprice1"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textViewduration1"
        android:text="Price:"
        android:visibility="visible"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="52dp"
